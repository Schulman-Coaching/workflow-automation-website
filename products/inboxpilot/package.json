{
  "name": "inboxpilot",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered email assistant for SMBs",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:api": "pnpm --filter @inboxpilot/api run dev",
    "dev:web": "pnpm --filter @inboxpilot/web run dev",
    "build": "pnpm -r run build",
    "build:api": "pnpm --filter @inboxpilot/api run build",
    "build:web": "pnpm --filter @inboxpilot/web run build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "db:generate": "pnpm --filter @inboxpilot/api run db:generate",
    "db:migrate": "pnpm --filter @inboxpilot/api run db:migrate",
    "db:push": "pnpm --filter @inboxpilot/api run db:push",
    "db:studio": "pnpm --filter @inboxpilot/api run db:studio"
  },
  "keywords": [
    "email",
    "ai",
    "assistant",
    "gmail",
    "outlook",
    "saas"
  ],
  "author": "FlowStack",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
